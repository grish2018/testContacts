block config

doctype html
html(lang="ru")
    head
        block head
            include head
    body.body(class=bodyClass)
        include mixins/svgsprite
        include mixins/pngsprite
        include mixins/customCheckbox
        include mixins/customRadioGroup
        include mixins/customFileInput
        include mixins/comicBubble
        
        include blocks/mobileMenu

        block header
            include blocks/header

        .content
            block content

        block footer
            include blocks/footer

        .hidden
            // include popups here

        block styles
            link(rel="stylesheet" href="assets/css/common.css?v=" + PACKAGE.version)
           
        block scripts-config
            script.
                /* изменяемые настройки скриптов, указаны значения по умолчанию */
                var appConfig = {
                    /*
                    scrollToOffset: 100, // оффсет при скролле до элемента
                    popupLoadedEvent: 'app.popup_loaded' // событие загрузки модалки
                    */
                }
        block scripts
            script(src="assets/js/vendors.bundle.js")
            script(src="assets/js/main.bundle.js?v=" + PACKAGE.version)
